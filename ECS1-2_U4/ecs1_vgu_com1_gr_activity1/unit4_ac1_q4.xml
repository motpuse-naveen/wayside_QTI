        <keywords>
            <keyword>QTI</keyword>
            <keyword>Quiz</keyword>
            <keyword>simple choice</keyword>
        </keywords>
  </metadata>
    <outcomeDeclaration identifier="SCORE" cardinality="single" baseType="integer">
        <defaultValue>
            <value>0</value>
        </defaultValue>
    </outcomeDeclaration>
    <itemBody>
    <div class="quiz-header">
        
            <p>Ustedes ____________ preparar un plato mexicano.</p>
               </div>
        <choiceInteraction responseIdentifier="RESPONSE" shuffle="false" maxChoices="1">
            <simpleChoice identifier="ChoiceA">quiero</simpleChoice>
            <simpleChoice identifier="ChoiceB">quieren</simpleChoice>
            <simpleChoice identifier="ChoiceC">queremos</simpleChoice>
            <simpleChoice identifier="ChoiceD">quieres</simpleChoice>
        </choiceInteraction>
         
    </itemBody>
